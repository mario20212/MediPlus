<h3 class="i-name">
    Dashboard
</h3>

<div class="values">
    <div class="val-box">
        <i class="fas fa-users"></i>
        <div>
            <h3>
                <%=userCount%>
            </h3>
            <span>New Users</span>
        </div>
    </div>
    <div class="val-box">
        <i class="fas fa-shopping-cart"></i>
        <div>
            <h3>
                <%=rowCount%>
            </h3>
            <span>Total Medicine/s</span>
        </div>
    </div>
    <div class="val-box">
        <i class="fas fa-acorn"></i>
        <div>
            <h3>
                <%=latestMedicine%>
            </h3>
            <span>Most Recent Review</span>
        </div>
    </div>
</div>

<dir class="board">
    <table width="100%">
        <thead>
            <tr>
                <td>Name</td>
                <td>Composition</td>
                <td>Uses</td>
                <td>Side Effects</td>
            </tr>
        </thead>
        <tbody>
            <% for (const medicine of latestNineMeds) { %>
                <tr>
                    <td class="people">
                        <div class="people-de">
                            <h5>
                                <%= medicine['Medicine Name'] %>
                            </h5>
                            <p>
                                <%= medicine.Manufacturer %>
                            </p>
                        </div>
                    </td>
                    <td>
                        <h5>
                            <%= medicine.Composition %>
                        </h5>
                    </td>
                    <td>
                        <h5>
                            <%= medicine.Uses %>
                        </h5>
                    </td>
                    <td>
                        <h5>
                            <%= medicine.Side_effects %>
                        </h5>
                    </td>
                </tr>
                <% } %>
        </tbody>

    </table>
</dir>