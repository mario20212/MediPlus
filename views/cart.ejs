<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="/css/cart.css">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-272764433-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-272764433-1');
    </script>

</head>

<body>
    <%- include("./partials/nav.ejs") %>
        <div class="container1">
            <div class="window">
                <div class="order-info">
                    <div class="order-info-content">
                        <h2>Order Summary</h2>
                        <div class="line"></div>
                        <% if (cart.length> 0) {
            %>
                            <form id="orderForm" action="/order/placeorder" method="post">
                                <table class="order-table">
                                    <tbody>
                                        <% cart.forEach((product, index)=> {
                %>
                                            <tr>
                                                <td>
                                                    <div class="product-wrapper">
                                                        <div class="image-container"> <img src="<%= product['Image URL'] %>" alt="Product Image" style="width: 200px; height: 200px;"> </div>
                                                        <div class="product-details">
                                                            <div class="product-name">
                                                                <%=product['Medicine Name'] %>
                                                            </div>
                                                            <div class="product-price"> EGP
                                                                <%=product.Price %>
                                                            </div>
                                                            <div class="product-name">
                                                                Quantity :
                                                                <%=quantity_array[index].medicine_quantity%>
                                                            </div>
                                                            <% if (options && options.length > 0) { %>
                                                                <div class="options-container">
                                                                    <h2>Options:</h2>
                                                                    <% options.forEach(option => { %>
                                                                        <div class="option">
                                                                            <p>Name:
                                                                                <%= option.option_name %>
                                                                            </p>
                                                                            <p>Value:
                                                                                <%= option.value %>
                                                                            </p>
                                                                        </div>
                                                                        <% }); %>
                                                                </div>
                                                                <% } else { %>
                                                                    <p>No options available.</p>
                                                                    <% } %>


                                                        </div>
                                                        <div class="delete-button">
                                                            <a href="/cart/delete/<%= product['Medicine Name'] %>">
                                                                <img class="delete-button" src="img/delete.png" alt="Delete Product">
                                                            </a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="line "></div>
                                                </td>
                                            </tr>
                                            <%
            }
            );
            %>
                                    </tbody>
                                </table>
                                <div class="line "></div>

                                <div class="formbold-main-wrapper ">
                                    <!-- Author: FormBold Team -->
                                    <!-- Learn More: https: //formbold.com -->
                                    <div class="formbold-form-wrapper ">
                                        <!-- <img src="your-image-url-here.jpg ">-->
                                        <div class="formbold-form-title ">
                                            <h2 class=" ">Shipping Information</h2>
                                        </div>
                                        <div class="formbold-input-flex">
                                            <div>
                                                <label for="firstname" class="formbold-form-label">First name</label>
                                                <input type="text" name="firstname" id="firstname" class="formbold-form-input" pattern="[A-Za-z]+" required title="Please enter a valid first name (letters only)">
                                            </div>
                                            <div>
                                                <label for="lastname" class="formbold-form-label">Last name</label>
                                                <input type="text" name="lastname" id="lastname" class="formbold-form-input" pattern="[A-Za-z]+" required title="Please enter a valid last name (letters only)">
                                            </div>
                                        </div>
                                        <div class="formbold-input-flex">
                                            <div>
                                                <label for="email" class="formbold-form-label">Email</label>
                                                <input type="email" name="email" id="email" class="formbold-form-input" pattern="[A-Za-z0-9._%+-]+@gmail\.com$" required title="Please enter a valid mail address">
                                            </div>
                                            <div>
                                                <label for="phone" class="formbold-form-label">Phone number</label>
                                                <input type="text" name="phone" id="phone" class="formbold-form-input" pattern="0[0-9]{9,11}" required title="Please enter a valid phone number (10 to 11 digits starting with 0)" maxlength="11">
                                            </div>
                                        </div>
                                        <div class="formbold-mb-3">
                                            <label for="address" class="formbold-form-label">Address</label>
                                            <input type="text" name="address" id="address" class="formbold-form-input" required title="Please enter a valid address (at least 2 words)">
                                        </div>

                                        <div class="formbold-input-flex ">
                                            <div><label for="city " class="formbold-form-label ">City</label><input type="text " name="city" id="city" class="formbold-form-input " required></div>
                                        </div>
                                        <div class="formbold-checkbox-wrapper "><label for="paymentmethod " class="formbold-form-label ">Payment Method</label><select name="paymentmethod" id="paymentmethod" class="formbold-form-input
                                                                " required><option value=" ">Select a payment method</option><option value="cashOnDelivery ">Cash on Delivery</option><option value="visa ">Visa</option></select></div>
                                        <div> <input class="formbold-btn" type="submit" value="proceed to checkout"></div>
                            </form>
                            <%
        }
        
        else {
            %>
                                <p class="empty-cart ">Your cart is empty.</p>
                                <%
        }
        
        %>
                                    </div>
                                    </div>
                    </div>
                </div>
</body>